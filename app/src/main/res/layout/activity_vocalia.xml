<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoli"
    tools:context=".VVocalia">

    <ImageView
        android:id="@+id/imvImagen"
        android:layout_width="137dp"
        android:layout_height="101dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/fondoet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensaje_id" />

    <Spinner
        android:id="@+id/sp_horario"
        android:layout_width="330dp"
        android:layout_height="31dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/fondoet"
        android:entries="@array/Horario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxNombreVocal" />

    <EditText
        android:id="@+id/edtxNombreVocal"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/fondoet"
        android:ems="10"
        android:hint="Nombre Vocal"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_primary"
        android:textColorHint="@color/design_default_color_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_campeonato" />

    <ListView
        android:id="@+id/lv_Vocalia"
        android:layout_width="409dp"
        android:layout_height="110dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/fondoet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvImagen" />

    <EditText
        android:id="@+id/edtxNombreArbitro"
        android:layout_width="358dp"
        android:layout_height="37dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/fondoet"
        android:ems="10"
        android:hint="Nombre Arbitro"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_primary"
        android:textColorHint="@color/design_default_color_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_horario" />

    <Button
        android:id="@+id/btnImagen"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/fondoboton"
        android:text="Subir Foto"
        android:textColor="@color/design_default_color_primary"
        android:textColorHint="@color/design_default_color_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imvImagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGPS" />

    <Button
        android:id="@+id/btnGPS"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/fondoboton"
        android:text="GPS "
        android:textColor="@color/design_default_color_primary"
        android:textColorHint="@color/design_default_color_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/mensaje_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxNombreArbitro" />

    <Spinner
        android:id="@+id/sp_campeonato"
        android:layout_width="351dp"
        android:layout_height="30dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/fondoet"
        android:entries="@array/Campeonato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spEquipos1" />

    <Spinner
        android:id="@+id/spEquipos2"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/fondoet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spEquipos1"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/mensaje_id"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/fondoet"
        android:text="Coordenadas GPS"
        android:textColor="@color/design_default_color_primary"
        android:textColorHint="@color/design_default_color_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGPS"
        app:layout_constraintTop_toBottomOf="@+id/edtxNombreArbitro" />

    <Spinner
        android:id="@+id/spEquipos1"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/fondoet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="164dp"
        android:text="EQUIPO A"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="33dp"
        android:text="EQUIPO B"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>